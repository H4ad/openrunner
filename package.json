{
  "name": "openrunner",
  "version": "0.2.5",
  "description": "OpenRunner - Desktop process manager for local development",
  "type": "module",
  "main": "./out/main/index.js",
  "bin": {
    "openrunner": "./out/main/cli.js"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "vue-tsc --noEmit && electron-vite build",
    "build:win": "pnpm build && electron-builder --win --config",
    "build:mac": "pnpm build && electron-builder --mac --config",
    "build:linux": "pnpm build && electron-builder --linux --config",
    "preview": "electron-vite preview",
    "typecheck": "tsc -p tsconfig.electron.json --noEmit",
    "frontend:dev": "vite",
    "frontend:build": "vue-tsc --noEmit && vite build",
    "rebuild": "electron-rebuild -f -w better-sqlite3,node-pty",
    "postinstall": "electron-rebuild -f -w better-sqlite3,node-pty"
  },
  "license": "MIT",
  "author": {
    "name": "Vinícius Lourenço",
    "email": "H4ad@users.noreply.github.com",
    "url": "https://github.com/H4ad"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/rebuild": "^4.0.3",
    "@sentry/vite-plugin": "^4.9.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@types/picomatch": "^4.0.2",
    "@types/pidusage": "^2.0.5",
    "@types/which": "^3.0.4",
    "@vitejs/plugin-vue": "^6.0.4",
    "electron": "^40.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "sass-embedded": "^1.97.3",
    "shadcn-vue": "^2.4.3",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue": "^3.5.27",
    "vue-tsc": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "electron",
      "better-sqlite3",
      "node-pty"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@radix-icons/vue": "^1.0.0",
    "@sentry/electron": "^7.7.1",
    "@tanstack/vue-table": "^8.21.3",
    "@types/markdown-it": "^14.1.2",
    "@vueuse/core": "^14.2.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.5.1",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.3",
    "electron-updater": "^6.7.3",
    "js-yaml": "^4.1.1",
    "lucide-vue-next": "^0.563.0",
    "markdown-it": "^14.1.1",
    "node-pty": "^1.1.0",
    "picomatch": "^4.0.3",
    "pidtree": "^0.6.0",
    "pidusage": "^4.0.1",
    "pinia": "^3.0.4",
